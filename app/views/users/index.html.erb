<section class="content-header">
  <header class="nav-title nav-title-inline">
    <%= link_to root_path do %>
      <div class="nav-icon">  </div>
    <% end %>
    <h2> Users </h2>
    <div class="row">
      <div class="col-md-4">
        <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
      </div>

      <div class="col-md-8 pull-right">
        <%= render 'filter' %>
      </div>
    </div>
  </header>
</section>

<br>

<section class="content">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>E-mail</th>
        <th>Credentials</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= render @presenter.users %>
    </tbody>
  </table>

  <%= paginate @presenter.users %>

  <%= content_tag :p, 'No user was found', class: 'text-center' unless @presenter.users.any? %>
</section>
