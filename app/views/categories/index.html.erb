<section class="content-header">
  <header class="nav-title nav-title-inline">
    <%= link_to root_path do %>
      <div class="nav-icon">  </div>
    <% end %>
    <h2> Categories </h2>
    <div class="row">
      <div class="col-md-4">
        <%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </header>
</section>

<br>

<section class="content">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Dimensions</th>
        <th>Weight</th>
        <th>Insurance (%)</th>
        <th>Availability</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= render @categories %>
    </tbody>
  </table>

  <%= paginate @categories %>

  <%= content_tag :p, 'No category was found', class: 'text-center' unless @categories.any? %>
</section>

