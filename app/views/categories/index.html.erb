<% provide :title, 'Categories' %>

<section class="content-header">
  <h1> Categories </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to root_path do %>
        <i class="fa fa-dashboard"></i> Home
      <% end %>
    </li>
    <li class="active">Categories</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-4">
    </div>
  </div>
  <br>
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">
        Category List
      </h3>
      <%= link_to 'New Category', new_category_path, class: 'btn btn-primary btn-sm pull-right' %>
    </div>
    <div class="box-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Dimensions</th>
            <th class="text-center">Weight</th>
            <th class="text-center">Insurance (%)</th>
            <th class="text-center">Available</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <%= render @categories %>
        </tbody>
      </table>
    <%= paginate @categories %>

    <%= content_tag :p, 'No category was found', class: 'text-center' unless @categories.any? %>
    </div>
  </div>

</section>

