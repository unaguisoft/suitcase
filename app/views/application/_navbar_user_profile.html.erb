<!-- User Account Menu -->
<li class="dropdown user">
  <% if current_user %>
    <!-- Menu Toggle Button -->
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      My account 
      <span class="caret"> </span>
    </a>
    <ul class="dropdown-menu">
      <li>
        <%= link_to 'Edit my profile', edit_profile_path %>
      </li>
      <li>
        <%= link_to 'Logout', :logout, method: :post %>
      </li>
    </ul>
  <% else %>    
    <%= link_to 'Login', :login %>
  <% end %>
</li>