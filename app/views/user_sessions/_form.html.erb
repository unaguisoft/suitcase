<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Login</h3>
      </div>
      <div class="box-body">
        <%= form_tag user_sessions_path, :method => :post do %>
          <fieldset class="form-group">
            <%= label_tag :email %><br />
            <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Enter your email' %>
          </fieldset>
          <fieldset class="form-group">
            <%= label_tag :password %><br />
            <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Enter your password'  %>
          </fieldset>
          <div class="actions">
            <%= submit_tag "Login!", class: 'btn btn-primary', data: {'disable-with' => 'Wait...'} %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>